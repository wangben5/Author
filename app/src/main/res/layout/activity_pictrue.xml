<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/img_login_bg"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <include layout="@layout/top_back" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:background="#000000" >

        <RelativeLayout
            android:id="@+id/rela_buttom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" >

            <ImageView
                android:id="@+id/img_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:src="@drawable/img_quanping_img_no"
                android:textColor="@color/text_black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/img_caijian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="10dp"
                android:src="@drawable/img_quanping_img_caijian"
                android:textColor="@color/text_black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/img_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:src="@drawable/img_quanping_img_yes"
                android:textColor="@color/text_black"
                android:textSize="18sp" />
        </RelativeLayout>
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	                android:layout_above="@+id/rela_buttom"
	    >
        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />
        <com.edmodo.cropper.CropImageView
            android:id="@+id/cropimage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:adjustViewBounds="true"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop" />
    </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>